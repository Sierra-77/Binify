    <script>
        function toggleCard(card, id) {
            // Hide all card content
            const allCards = document.querySelectorAll('.scrollable-card');
            allCards.forEach(function(c) {
                c.classList.remove('active');
            });

            // Hide all card contents
            const allContents = document.querySelectorAll('.card-body');
            allContents.forEach(function(content) {
                content.style.display = 'none';
            });

            // Show content for the clicked card
            card.classList.toggle('active');
            const content = document.getElementById(id);
            if (content) {
                content.style.display = content.style.display === 'none' ? 'block' : 'none';
            }

            // Center the clicked card
            centerCard(card);
        }

        function centerCard(card) {
            const cardGrid = document.getElementById("card-grid");
            const cardOffset = card.offsetLeft; // 获取卡片相对于父容器的位置
            const cardWidth = card.offsetWidth; // 获取卡片的宽度

            // 计算偏移量，使卡片居中
            const centerPosition = cardOffset - (cardGrid.offsetWidth / 2) + (cardWidth / 2);
            
            // 滚动到卡片居中的位置
            cardGrid.scrollTo({
                left: centerPosition,
                behavior: 'smooth' // 平滑滚动
            });
        }
    </script>
